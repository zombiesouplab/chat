{
    "name": "musonza/chat",
    "description": "Chat Package for Laravel",
    "type": "library",
    "keywords": [
        "laravel",
        "chat",
        "messaging",
        "conversation"
    ],
    "require": {
        "php": "^7.2",
        "laravel/framework": "^6.0|^7.0",
        "spatie/laravel-fractal": "^5.7"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0",
        "orchestra/testbench": "^4.0",
        "orchestra/database": "^4.0",
        "mockery/mockery": "^1.0.0"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Tinashe Musonza",
            "email": "tashtin263@gmail.com",
            "role": "Developer"
        }
    ],
    "autoload": {
        "psr-4": {
            "Musonza\\Chat\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Musonza\\Chat\\Tests\\": "tests"
        },
        "files": [
            "tests/Helpers/Models.php"
        ]
    },
    "scripts": {
        "test": "phpunit"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Musonza\\Chat\\ChatServiceProvider"
            ],
            "aliases": {
                "Chat": "Musonza\\Chat\\Facades\\ChatFacade"
            }
        }
    }
}
